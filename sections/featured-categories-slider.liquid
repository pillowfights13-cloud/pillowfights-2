{% comment %}
  Featured Categories Slider Section with Flickity
  Add this file to sections/featured-categories-slider.liquid
{% endcomment %}

<!-- Load Flickity CSS and JS from CDN -->
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

<style>
  .featured-categories-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    {% if section.settings.full_width %}
      width: 100vw;
      margin-left: calc(50% - 50vw);
    {% endif %}
  }

  .featured-categories-container {
    {% unless section.settings.full_width %}
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    {% else %}
      width: 100%;
      padding: 0 {{ section.settings.container_padding }}px;
    {% endunless %}
  }

  .section-title {
    text-align: center;
    margin-bottom: 40px;
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    font-weight: 600;
    letter-spacing: 1px;
    {% if section.settings.full_width %}
      padding: 0 20px;
    {% endif %}
  }

  /* Flickity Slider Styles */
  .categories-flickity {
    background: transparent;
  }

  .categories-flickity:after {
    content: '';
    display: block;
    clear: both;
  }

  .categories-flickity .flickity-viewport {
    overflow: hidden;
    position: relative;
  }

  .categories-flickity .flickity-slider {
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* Category Item Styles */
  .category-cell {
    width: {{ 100 | divided_by: section.settings.items_desktop }}%;
    padding: 0 10px;
    text-align: center;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .category-cell:hover {
    opacity: 1;
    transform: translateY(-5px);
  }

  .category-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .category-image {
    width: 100%;
    max-width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 15px;
    display: block;
    border: 3px solid transparent;
    transition: all 0.3s ease;
    background: #f8f8f8;
  }

  .category-cell:hover .category-image {
    border-color: {{ section.settings.hover_border_color }};
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
  }

  .category-name {
    font-size: {{ section.settings.category_name_size }}px;
    color: {{ section.settings.category_name_color }};
    font-weight: 500;
    margin: 0;
    line-height: 1.4;
  }

  /* Custom Flickity Navigation */
  .flickity-button {
    position: absolute;
    background: {{ section.settings.arrow_background }};
    border: none;
    color: {{ section.settings.arrow_color }};
    cursor: pointer;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    transition: all 0.3s ease;
    opacity: {{ section.settings.arrow_opacity | divided_by: 100.0 }};
  }

  .flickity-button:hover {
    opacity: 1;
    transform: translateY(-50%) scale(1.1);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    background: {{ section.settings.arrow_background }};
  }

  .flickity-button:disabled {
    opacity: 0.3;
    cursor: auto;
  }

  .flickity-button-icon {
    fill: {{ section.settings.arrow_color }};
  }

  .flickity-prev-next-button.previous {
    left: {{ section.settings.arrow_position }}px;
  }

  .flickity-prev-next-button.next {
    right: {{ section.settings.arrow_position }}px;
  }

  {% unless section.settings.show_arrows %}
  .flickity-button {
    display: none;
  }
  {% endunless %}

  /* Custom Flickity Dots */
  .flickity-page-dots {
    bottom: -50px;
    text-align: center;
  }

  .flickity-page-dots .dot {
    display: inline-block;
    width: 12px;
    height: 12px;
    margin: 0 5px;
    background: {{ section.settings.dot_inactive_color }};
    border-radius: 50%;
    opacity: 0.25;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .flickity-page-dots .dot.is-selected {
    background: {{ section.settings.dot_active_color }};
    opacity: 1;
    transform: scale(1.2);
  }

  {% unless section.settings.show_dots %}
  .flickity-page-dots {
    display: none;
  }
  {% endunless %}

  /* Responsive Design */
  @media (max-width: 1199px) {
    .category-cell {
      width: {{ 100 | divided_by: section.settings.items_tablet }}%;
    }
  }

  @media (max-width: 767px) {
    .category-cell {
      width: {{ 100 | divided_by: section.settings.items_mobile }}%;
      padding: 0 8px;
    }
    
    .category-image {
      height: 120px;
      max-width: 120px;
    }
    
    .flickity-button {
      width: 40px;
      height: 40px;
    }
    
    .flickity-prev-next-button.previous {
      left: 10px;
    }
    
    .flickity-prev-next-button.next {
      right: 10px;
    }

    .featured-categories-container {
      padding: 0 {{ section.settings.container_padding | divided_by: 2 }}px;
    }
  }

  @media (max-width: 480px) {
    .category-cell {
      padding: 0 5px;
    }
    
    .category-image {
      height: 100px;
      max-width: 100px;
    }
  }

  /* Loading State */
  .categories-flickity:not(.flickity-enabled) {
    opacity: 0.5;
  }

  .categories-flickity.flickity-enabled {
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  /* Custom scrollbar for touch devices */
  @media (hover: none) and (pointer: coarse) {
    .flickity-viewport {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
  }
</style>

<div class="featured-categories-section">
  <div class="featured-categories-container">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="categories-flickity" 
         data-flickity='{
           "cellAlign": "{{ section.settings.cell_align }}",
           "contain": true,
           "prevNextButtons": {{ section.settings.show_arrows }},
           "pageDots": {{ section.settings.show_dots }},
           "autoPlay": {% if section.settings.auto_slide %}{{ section.settings.slide_interval | times: 1000 }}{% else %}false{% endif %},
           "pauseAutoPlayOnHover": true,
           "wrapAround": {{ section.settings.wrap_around }},
           "freeScroll": {{ section.settings.free_scroll }},
           "groupCells": {{ section.settings.group_cells }},
           "lazyLoad": {{ section.settings.lazy_load }},
           "adaptiveHeight": false,
           "setGallerySize": true,
           "imagesLoaded": true,
           "percentPosition": false
         }'>
      
      {% for block in section.blocks %}
        <div class="category-cell" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.collection.url | default: '#' }}" class="category-link">
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | image_url: width: 300 }}" 
                alt="{{ block.settings.category_name | default: block.settings.collection.title }}"
                class="category-image"
                {% if section.settings.lazy_load %}data-flickity-lazyload="{{ block.settings.image | image_url: width: 300 }}"{% endif %}
                loading="lazy"
              >
            {% else %}
              <div class="category-image" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); display: flex; align-items: center; justify-content: center; color: #999;">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
              </div>
            {% endif %}
            <h3 class="category-name">
              {{ block.settings.category_name | default: block.settings.collection.title | default: "Category" }}
            </h3>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Wait for Flickity to load
  if (typeof Flickity !== 'undefined') {
    initializeFlickity();
  } else {
    // Fallback: wait a bit more for Flickity to load
    setTimeout(initializeFlickity, 500);
  }

  function initializeFlickity() {
    const flickityElements = document.querySelectorAll('.categories-flickity');
    
    flickityElements.forEach(function(elem) {
      if (!elem.classList.contains('flickity-enabled')) {
        try {
          // Initialize Flickity
          const flkty = new Flickity(elem, {
            cellAlign: '{{ section.settings.cell_align }}',
            contain: true,
            prevNextButtons: {{ section.settings.show_arrows }},
            pageDots: {{ section.settings.show_dots }},
            autoPlay: {% if section.settings.auto_slide %}{{ section.settings.slide_interval | times: 1000 }}{% else %}false{% endif %},
            pauseAutoPlayOnHover: true,
            wrapAround: {{ section.settings.wrap_around }},
            freeScroll: {{ section.settings.free_scroll }},
            groupCells: {{ section.settings.group_cells }},
            lazyLoad: {{ section.settings.lazy_load }},
            adaptiveHeight: false,
            setGallerySize: true,
            imagesLoaded: true,
            percentPosition: false,
            accessibility: true,
            rightToLeft: {{ settings.text_direction == 'rtl' }}
          });

          // Custom event listeners
          flkty.on('ready', function() {
            elem.style.opacity = '1';
          });

          // Pause autoplay when user interacts
          elem.addEventListener('mouseenter', function() {
            flkty.pausePlayer();
          });

          elem.addEventListener('mouseleave', function() {
            flkty.unpausePlayer();
          });

          // Accessibility improvements
          elem.addEventListener('focus', function() {
            flkty.pausePlayer();
          });

          elem.addEventListener('blur', function() {
            flkty.unpausePlayer();
          });

        } catch (error) {
          console.warn('Flickity initialization failed:', error);
        }
      }
    });
  }

  // Reinitialize on theme editor changes
  if (window.Shopify && window.Shopify.designMode) {
    document.addEventListener('shopify:section:load', function(event) {
      setTimeout(initializeFlickity, 100);
    });
  }
});
</script>

