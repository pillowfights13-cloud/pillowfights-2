<section class="design-sophistication-section">
  <div class="word-and-categories">
    
    <!-- Left Text Content -->
    <div class="text-content-wrapper">
      {% if section.settings.title != blank %}
        <div class="design-that-speaks">
          <p>{{ section.settings.title }}</p>
        </div>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="in-every-space">
          <p>{{ section.settings.description }}</p>
        </div>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <div class="shop-now-wrapper">
          <a href="{{ section.settings.button_url }}" class="shop-now-link">
            <span class="shop-now-text">{{ section.settings.button_text }}</span>
            <div class="arrow-icon">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
              </svg>
            </div>
          </a>
        </div>
      {% endif %}
    </div>
    
    <!-- Right Product Slider -->
    <div class="product-slider-container">
      <div class="products-swiper">
        <div class="swiper-container">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% if block.settings.product != blank %}
                <div class="product-slide swiper-slide" {{ block.shopify_attributes }}>
                  <div class="product-card">
                    <a href="{{ block.settings.product.url }}" class="product-link">
                      
                      <!-- Product Image -->
                      <div class="product-image-wrapper">
                        {% if block.settings.product.featured_image %}
                          <div 
                            class="product-image"
                            style="background-image: url('{{ block.settings.product.featured_image | image_url: width: 450 }}');"
                          ></div>
                        {% else %}
                          <div class="product-image no-image">
                            <svg width="60" height="60" viewBox="0 0 24 24" fill="#ccc">
                              <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                            </svg>
                          </div>
                        {% endif %}
                      </div>
                      
                      <!-- Product Info -->
                      <div class="product-info">
                        <!-- Star Rating -->
                        <div class="star-rating">
                          {% assign rating = block.settings.rating | default: 4 %}
                          {% for i in (1..5) %}
                            {% if i <= rating %}
                              <svg class="star filled" viewBox="0 0 24 24" fill="#ffd700">
                                <path d="M12 2l2.4 7.4h7.6l-6 4.6 2.4 7.4-6-4.6-6 4.6 2.4-7.4-6-4.6h7.6z"/>
                              </svg>
                            {% else %}
                              <svg class="star empty" viewBox="0 0 24 24" fill="#e0e0e0">
                                <path d="M12 2l2.4 7.4h7.6l-6 4.6 2.4 7.4-6-4.6-6 4.6 2.4-7.4-6-4.6h7.6z"/>
                              </svg>
                            {% endif %}
                          {% endfor %}
                        </div>
                        
                        <div class="product-details">
                          <div class="product-title">
                            <p>{{ block.settings.product.title }}</p>
                          </div>
                          <div class="product-price">
                            <p>From ‚Çπ{{ block.settings.product.price | money_without_currency }}</p>
                          </div>
                        </div>
                      </div>
                    </a>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
          
          <!-- Navigation Arrows -->
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
        </div>
      </div>
    </div>
    
  </div>
</section>

