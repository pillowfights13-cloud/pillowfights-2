  overflow: hidden;
}

.products-swiper {
  width: 100%;
  height: 100%;
}

.swiper-container {
  width: 100%;
  height: 100%;
  overflow: visible;
}

.product-slide {
  width: 450px;
  height: auto;
}

/* Product Cards */
.product-card {
  position: relative;
  width: 450px;
  height: 658px;
  background: transparent;
  transition: transform 0.3s ease;
}

.product-card:hover {
  transform: translateY(-{{ section.settings.card_hover_lift }}px);
}

.product-link {
