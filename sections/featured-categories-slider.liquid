  font-weight: {{ section.settings.current_price_weight }};
  font-size: {{ section.settings.current_price_size }}px;
  color: {{ section.settings.current_price_color }};
  margin: 0;
  display: block;
  white-space: nowrap;
}

/* Swiper Navigation - Desktop Only */
.swiper-button-next,
.swiper-button-prev {
