</style>

<script>
// Initialize Swiper with unique class to avoid conflicts
function initializeProductSwiper() {
  console.log('Initializing Design Product Swiper...');
  
  if (typeof Swiper !== 'undefined') {
    try {
      // Use more specific selector to avoid conflicts
      const swiperContainer = document.querySelector('.design-sophistication-section .products-swiper .swiper-container');
      
      if (swiperContainer && !swiperContainer.classList.contains('swiper-initialized')) {
        const swiper = new Swiper(swiperContainer, {
          slidesPerView: 'auto',
          spaceBetween: {{ section.settings.slide_spacing }},
          navigation: {
            nextEl: '.design-sophistication-section .swiper-button-next',
            prevEl: '.design-sophistication-section .swiper-button-prev',
          },
          loop: {{ section.settings.infinite_loop }},
          autoplay: {% if section.settings.autoplay %}
          {
            delay: {{ section.settings.autoplay_delay | times: 1000 }},
            disableOnInteraction: {{ section.settings.pause_on_interaction }},
            pauseOnMouseEnter: {{ section.settings.pause_on_hover }}
          }
          {% else %}false{% endif %},
          speed: {{ section.settings.transition_speed }},
          effect: '{{ section.settings.transition_effect }}',
          freeMode: {
            enabled: true,
            sticky: false,
          },
          centeredSlides: false,
          grabCursor: true,
          watchOverflow: true, /* Disable swiper when not enough slides */
          breakpoints: {
            320: {
              slidesPerView: 1.2,
              spaceBetween: 15,
              navigation: false /* Disable navigation on mobile */
            },
            480: {
              slidesPerView: 1.5,
              spaceBetween: 20,
              navigation: false /* Disable navigation on mobile */
            },
            768: {
              slidesPerView: 'auto',
              spaceBetween: {{ section.settings.slide_spacing }},
              navigation: false /* Disable navigation on tablet */
            },
            {{ section.settings.mobile_breakpoint | plus: 1 }}: {
              slidesPerView: 'auto',
              spaceBetween: {{ section.settings.slide_spacing }},
              navigation: {
                nextEl: '.design-sophistication-section .swiper-button-next',
                prevEl: '.design-sophistication-section .swiper-button-prev',
              }
            }
          },
          on: {
            init: function() {
              console.log('Design Product Swiper initialized successfully!');
            },
            resize: function() {
              this.update();
            }
          }
        });

        // Handle window resize
        window.addEventListener('resize', function() {
          if (swiper && !swiper.destroyed) {
            swiper.update();
          }
        });
      }
    } catch (error) {
      console.error('Error initializing Design Product Swiper:', error);
    }
  } else {
    console.error('Swiper library not loaded! Retrying...');
    setTimeout(initializeProductSwiper, 500);
  }
}

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', initializeProductSwiper);

// Fallback initialization
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', initializeProductSwiper);
} else {
  setTimeout(initializeProductSwiper, 100);
}

// Shopify theme editor support
if (window.Shopify && window.Shopify.designMode) {
  document.addEventListener('shopify:section:load', function(event) {
    setTimeout(initializeProductSwiper, 200);
  });
  
  document.addEventListener('shopify:section:unload', function(event) {
    // Clean up if needed
  });
}
</script>
