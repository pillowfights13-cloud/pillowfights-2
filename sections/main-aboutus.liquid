<div class="aboutus-container">
  <h1 class="heading-aboutus">{{ section.settings.title }}</h1>
  <p class="aboutus-text">
   {{ section.settings.content }}
  </p>
</div>

<style>
 
  .aboutus-container{
      width: {{ section.settings.container_width }}px;
      margin: 60px auto;
      text-align: center;
      font-size: 36px;
      font-weight: 500;
  }

  .heading-aboutus{
    border-bottom: 1px solid #000;
    padding-bottom: 10px;
  }

  .aboutus-text{
    margin: 60px auto;
    font-size: 20px;
    font-weight: 300;
  }
</style>

{% schema %}
{
  "name": "About Us",
  "settings": [
    {
      "type": "range",
      "id": "container_width",
      "label": "Container Max Width (px)",
      "min": 1000,
      "max": 1800,
      "step": 50,
      "default": 1800
    },
    {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "About Us"
    },
    {
        "type": "text",
        "id": "content",
        "label": "Content"
    }
  ]

}
{% endschema %}
