{%- comment -%}
  Simple About Us Section - sections/aboutus-simple.liquid
{%- endcomment -%}

<div class="aboutus-section" id="shopify-section-{{ section.id }}">
  <div class="aboutus-container">
    
    {%- comment -%} Main Title {%- endcomment -%}
    {%- if section.settings.title != blank -%}
      <h1 class="heading-aboutus">{{ section.settings.title }}</h1>
    {%- endif -%}

    {%- comment -%} Main Content {%- endcomment -%}
    {%- if section.settings.content != blank -%}
      <p class="aboutus-text">{{ section.settings.content }}</p>
    {%- endif -%}

    {%- comment -%} Additional Content Blocks {%- endcomment -%}
    {%- if section.blocks.size > 0 -%}
      <div class="aboutus-additional-content">
        {%- for block in section.blocks -%}
          <div class="aboutus-block" {{ block.shopify_attributes }}>
            {%- case block.type -%}
              
              {%- when 'text_content' -%}
                {%- if block.settings.block_title != blank -%}
                  <h2 class="block-heading">{{ block.settings.block_title }}</h2>
                {%- endif -%}
                {%- if block.settings.block_text != blank -%}
                  <p class="aboutus-text">{{ block.settings.block_text }}</p>
                {%- endif -%}

              {%- when 'simple_paragraph' -%}
                {%- if block.settings.paragraph_text != blank -%}
                  <p class="aboutus-text">{{ block.settings.paragraph_text }}</p>
                {%- endif -%}

            {%- endcase -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

  </div>
</div>

<style>
  .aboutus-section {
    width: 100%;
    padding: {{ section.settings.section_padding }}px 20px;
    background-color: {{ section.settings.background_color }};
  }

  .aboutus-container {
    width: 100%;
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    text-align: {{ section.settings.text_alignment }};
  }

  .heading-aboutus {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    border-bottom: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    padding-bottom: {{ section.settings.border_spacing }}px;
    margin: 0 0 {{ section.settings.title_margin }}px 0;
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
  }

  .aboutus-text {
    font-size: {{ section.settings.text_size }}px;
    font-weight: {{ section.settings.text_weight }};
    color: {{ section.settings.text_color }};
    line-height: {{ section.settings.line_height }};
    margin: {{ section.settings.text_margin }}px auto;
    max-width: {{ section.settings.text_max_width }}px;
  }

  .aboutus-additional-content {
    margin-top: {{ section.settings.blocks_spacing }}px;
  }

  .aboutus-block {
    margin-bottom: {{ section.settings.block_spacing }}px;
  }

  .block-heading {
    font-size: {{ section.settings.block_title_size }}px;
    font-weight: {{ section.settings.block_title_weight }};
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.block_title_margin }}px 0;
    text-align: {{ section.settings.text_alignment }};
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .aboutus-container {
      text-align: center;
    }

    .heading-aboutus {
      font-size: {{ section.settings.title_size | divided_by: 1.2 }}px;
    }

    .aboutus-text {
      font-size: {{ section.settings.text_size | minus: 2 }}px;
    }

    .block-heading {
      font-size: {{ section.settings.block_title_size | divided_by: 1.2 }}px;
    }
  }
</style>

